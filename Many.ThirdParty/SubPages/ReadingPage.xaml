<Page
    x:Class="Many.ThirdParty.SubPages.ReadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Many.ThirdParty.SubPages"
    xmlns:dvm="using:Many.ThirdParty.Core.ViewModels"
    xmlns:ctm="using:Many.ThirdParty.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding ReadingPageViewModel,
                          RelativeSource={RelativeSource Mode=Self}}"
    d:DataContext="{d:DesignInstance Type=dvm:ReadingPageViewModel,
                                     IsDesignTimeCreatable=True}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Themes/TextBlockResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Name="ReadingPageListViewCollection"
                              IsSourceGrouped="True"
                              ItemsPath="ContentModelCollection"
                              Source="{Binding ReadingModel}">
            </CollectionViewSource>
            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Grid>
                <FlipView x:Name="fv"
                          Height="170"
                          ItemsSource="{Binding ReadingPageFlipViewImageSource}"
                          SelectionChanged="fv_SelectionChanged">
                    <FlipView.ItemTemplate>
                        <DataTemplate>
                            <Border>
                                <ctm:BlankButton>
                                    <Image x:Name="bkimg" 
                                           Stretch="UniformToFill" 
                                           Source="{Binding}"/>
                                </ctm:BlankButton>
                            </Border>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>
                <StackPanel x:Name="ManyEllipse"
                            Height="6" 
                            Width="100"
                            Margin="0 5"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal" >
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5"/>
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                    <Ellipse Margin="3 0 3 0" Width="5" Height="5" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Background="Yellow">
                <SemanticZoom>
                    <SemanticZoom.ZoomedInView>
                        <ListView x:Name="items_listview"
                          Height="550"
                          VerticalAlignment="Top"
                          VerticalContentAlignment="Top"
                          ItemsSource="{Binding Source={StaticResource ReadingPageListViewCollection}}">
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="LightGray">
                                                <TextBlock Text="{Binding ContentType}"
                                                   Margin="5"
                                                   FontSize="12"/>
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel.Resources>
                                            <Style x:Key="Demo" TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="LineHeight" Value="19"/>
                                                <Setter Property="Margin" Value="4" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Style="{StaticResource Demo}"
                                           Text="{Binding Title}"/>
                                        <TextBlock Style="{StaticResource Demo}"
                                           Text="{Binding Author}"
                                           FontFamily="Consolas"/>
                                        <TextBlock Style="{StaticResource Demo}"
                                           Text="{Binding ContentSummary}"
                                           TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </SemanticZoom.ZoomedInView>
                    <SemanticZoom.ZoomedOutView>
                        <ListView ItemsSource="{Binding ReadingModel}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightGray">
                                        <TextBlock Text="{Binding ContentType}"
                                                   Margin="5"
                                                   FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>
            </Grid>
        </Grid>
    </Grid>
</Page>
