<Page
    x:Class="Many.ThirdParty.MainFrameContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Many.ThirdParty"
    xmlns:dvm="using:Many.ThirdParty.Core.ViewModels"
    xmlns:ctm="using:Many.ThirdParty.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:imgs="using:Windows.UI.Xaml.Media;"
    mc:Ignorable="d"
    DataContext="{Binding MainFrameContainerViewModel,
                          RelativeSource={RelativeSource Mode=Self}}"
    d:DataContext="{d:DesignInstance Type=dvm:MainFrameContainerViewModel,
                                     IsDesignTimeCreatable=True}">

    <Page.Resources>
        <ResourceDictionary>
            <!--<x:String x:Key="HomeSource">ms-appx:///Resources/MFCImages/Home.png</x:String>-->
        </ResourceDictionary>
    </Page.Resources>
    <RelativePanel Background="LightGray">

        <!--<Grid x:Name="topGrid" 
              Height="50"
              Background="White"
              Width="{Binding CurrentWindowWidth}">

        </Grid>-->


        <Grid x:Name="navBtnBottom"
              Height="50"
              Width="{Binding CurrentWindowWidth}"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ctm:HomeButton Grid.Column="0">
            </ctm:HomeButton>
            <Button Grid.Column="1">
                <Image Source="ms-appx:///Resources/MFCImages/reading.png"/>
            </Button>
            <Button Grid.Column="2">
                <Image Source="ms-appx:///Resources/MFCImages/music.png"/>
            </Button>
            <Button Grid.Column="3">
                <Image Source="ms-appx:///Resources/MFCImages/movie.png"/>
            </Button>
        </Grid>
        <StackPanel x:Name="navBtnLeft"
                    Width="80"
                    Height="{Binding CurrentWindowHeight}"
                    Background="White"
                    >
            <Button>
                <Image Source="ms-appx:///Resources/MFCImages/home.png"/>
            </Button>
            <Button>
                <Image Source="ms-appx:///Resources/MFCImages/reading.png"/>
            </Button>
            <Button>
                <Image Source="ms-appx:///Resources/MFCImages/music.png"/>
            </Button>
            <Button>
                <Image Source="ms-appx:///Resources/MFCImages/movie.png"/>
            </Button>
        </StackPanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="navBtnLeft.Visibility" Value="Collapsed"/>
                        <Setter Target="navBtnBottom.(RelativePanel.AlignBottomWithPanel)" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="navBtnBottom.Visibility" Value="Collapsed"/>
                        <Setter Target="navBtnLeft.(RelativePanel.AlignLeftWithPanel)" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </RelativePanel>
</Page>
